<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edwardxuzhu.moran.moran"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:name="com.edwardxuzhu.moran.moran.ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.edwardxuzhu.moran.moran.ui.activity.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.edwardxuzhu.moran.moran.ui.activity.SignInActivity"
            android:label="@string/title_activity_sign_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.edwardxuzhu.moran.moran.ui.activity.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>